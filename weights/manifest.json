{
    "name": "connect-weight",
    "description": "My first Chrome App.",
    "version": "0.1",
    "manifest_version": 2,
    "app": {
      "background": {
          "scripts": ["background.js"]
      }
    },
    "icons": { "16": "calculator-16.png", "128": "calculator-128.png" },
    "externally_connectable":{
      "ids": ["oaolhcgompiokehjkboafckemmhijjnk"],
      "matches": [
        "*://*.baidu.com/*",
        "*://*.qtoolsbaby.cn:*/*",
        "*://*.qtoolsbaby.net:*/*"
      ],
      "accepts_tls_channel_id":true
    },
    "permissions": ["background","notifications","serial","storage"]

}